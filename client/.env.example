# NODUS Environment Variables
# Copy this file to .env for local development

# Application Settings
VITE_APP_NAME=NODUS
VITE_APP_VERSION=1.0.0

# API Endpoints
VITE_API_URL=https://api.nodus-now.net
VITE_MOCK_API_ENABLED=true

# Authentication
VITE_AUTH_STORAGE_KEY=nodus_auth_token
VITE_AUTH_EXPIRY_DAYS=7

# Equity Engine
VITE_ETHEREUM_NETWORK=rinkeby
VITE_WALLET_CONNECT_PROJECT_ID=00000000000000000000000000000000
VITE_EQUITY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Feature Flags
VITE_FEATURE_REFERRALS_ENABLED=true
VITE_FEATURE_BADGES_ENABLED=true
VITE_FEATURE_TERRITORY_ENABLED=true

# Analytics
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=UA-000000000-1

# Mapbox (For Territory Visualization)
VITE_MAPBOX_ACCESS_TOKEN=pk.dummy.token.replace.with.actual.token
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/light-v11 